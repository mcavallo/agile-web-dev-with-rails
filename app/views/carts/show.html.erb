<p id="notice"><%= notice %></p>

<h1>Your Cart</h1>

<% if @cart.line_items.empty? %>

<p>Your cart is currently empty.</p>

<% else %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th class="centered">Qty</th>
      <th>Product</th>
      <th class="centered">Price</th>
      <th class="centered">Subtotal</th>
    </tr>
  </thead>
  <tbody>
  <% @cart.line_items.each do |item| %>
    <tr>
      <td class="amount-column"><%= item.quantity %></td>
      <td><%= item.product.title %><span class="remove-item"><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
      <td class="price-column"><%= number_to_currency( item.product.price ) %></td>
      <td class="price-column"><%= number_to_currency( item.total_price ) %></td>
    </tr>
  <% end %>
  <tr>
  	<td colspan="3" class="total-cell">Total</td>
  	<td class="total-amount-cell"><%= number_to_currency( @cart.total_price ) %></td>
  </tr>
  </tbody>
</table>

<div class="btn-pack">
	<%= link_to 'Continue Shopping', store_url, :class => 'btn' %>
	<%= button_to 'Empty cart', @cart, 
		:method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>

<% end %>