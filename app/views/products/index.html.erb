<h1>Listing products</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th colspan="3" class="actions-column">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= product.title %></td>
      <td><%= truncate strip_tags(product.description), :length => 150 %></td>
      <td><%= image_tag product.image_url, :class => 'list-image' %></td>
      <td><%= product.price %></td>
      <td class="actions-column">
        <%= link_to 'Show', product, :class => 'btn' %>
        <%= link_to 'Edit', edit_product_path(product), :class => 'btn' %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
    </td>
    </tr>
  <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Product', new_product_path, :class => 'btn' %>
