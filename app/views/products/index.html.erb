<h1>Listing products</h1>

<table class="table table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th class="centered">Price</th>
      <th colspan="3" class="centered">Actions</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td><%= image_tag product.image_url, :class => 'list-image' %></td>
      <td>
        <dl>
          <dt><%= product.title %></dt>
          <dd><%= truncate strip_tags(product.description), :length => 150 %></dd>
        </dl>
      </td>
      <td class="price-column"><%= product.price %></td>
      <td class="actions-column">
        <%= link_to '<i class="icon-search"></i>'.html_safe, product, :class => 'btn btn-small' %>
        <%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_product_path(product), :class => 'btn btn-small' %>
        <%= link_to '<i class="icon-remove icon-white"></i>'.html_safe, product, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %>
    </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Product', new_product_path, :class => 'btn btn-primary' %>
