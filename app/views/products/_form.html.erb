<%= form_for(@product) do |f| %>

  <% if @product.errors.any? %>
    <div id="error_explanation" class="alert alert-box alert-error">
      <h4>Oops! <%= pluralize(@product.errors.count, "error") %> were found.</h4>
      <p>Please fix the following fields:</p>
      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'input-xlarge' %>
  </div>
  <div class="control-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'input-xlarge', :rows => 4 %>
  </div>
  <div class="control-group">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, :class => 'input-xlarge' %>
  </div>
  <div class="control-group">
    <%= f.label :price %>
    <%= f.text_field :price, :class => 'input-xlarge' %>
  </div>
  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
  </div>

<% end %>
