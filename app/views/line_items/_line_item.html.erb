<tr id="cart-item-<%= line_item.id %>">
  <td class="qty"><strong><%= line_item.quantity %></strong></td>
  <td class="title"><%= line_item.product.title %><span class="remove-item"> (<%= link_to 'remove', line_item, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %>)</span></td>
  <td class="price"><%= number_to_currency( line_item.total_price ) %></td>
</tr>