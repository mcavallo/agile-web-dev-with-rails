<!DOCTYPE html>
<html>
<head>
  <title>Generic Store</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="wrap">
		<div class="container">

		  <div class="masthead">
		  	<h3 class="muted">Generic Store</h3>
		    <div class="navbar">
		      <div class="navbar-inner">
		        <div class="container">
		          <ul class="nav">		          	
		            <li><%= link_to 'Home', store_url %></li>
		            <li><%= link_to 'Products', products_url %></li>
		          </ul>
		        </div>
		      </div>
		    </div><!-- /.navbar -->
		  </div><!-- /.masthead -->
		  
			<div class="main">
				<% unless @cart.nil? %>

				<div id="sidebar">
					<%= render @cart %>					
				</div>
				<div id="content" class="with-sidebar">
					<%= yield %>	
				</div>

				<% else  %>

				<div id="content">
					<%= yield %>	
				</div>

				<% end %>
			</div><!-- /.main -->

		</div><!-- /.container -->
		<div id="push"></div>
	</div><!-- /.wrap -->

	<div id="footer">
		<div class="container">
			<div class="row">
				<div class="copyright span6">&copy; <%= DateTime.now.year %> Generic Store</div>
				<div class="time span6"><%= DateTime.now %></div>
			</div>
		</div>		
	</div>

</body>
</html>
